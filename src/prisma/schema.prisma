// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Borough {
  id              Int         @id @default(autoincrement())
  name            String
  spaces          Space[]
}

model Hours {
  id              Int         @id @default(autoincrement())
  spaceId         Int
  space           Space       @relation(fields: [spaceId], references: [id])
  day             String
  open            String
  close           String
}

model Space {
  id              Int         @id @default(autoincrement())
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  name            String
  boroughId       Int
  borough         Borough     @relation(fields: [boroughId], references: [id])
  affordability   Int
  type            String
  wiFi            Int
  loudness        Int
  power           Int
  size            Int
  space           Int
  busyness        Int
  coffee          Int
  hotspot         Int
  hours           Hours[]
  images          Image[]
  rules           String?
  googleMaps      String
}

model Image {
  id              Int         @id @default(autoincrement())
  spaceId         Int
  space           Space       @relation(fields: [spaceId], references: [id])
  url             String
}